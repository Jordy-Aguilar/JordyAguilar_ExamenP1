@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #000000, #E91E63);
            font-family: 'Montserrat', sans-serif;
            color: #FFFFFF;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            padding: 20px;
            border-radius: 20px;
            max-width: 600px;
            width: 100%;
            text-align: center;
            background: none;
            box-shadow: none;
        }

        h1.display-4 {
            font-size: 2rem;
            color: #FFFFFF;
            margin-bottom: 10px;
            font-weight: 600;
            text-transform: uppercase;
        }

        p {
            font-size: 1rem;
            color: #FFFFFF;
            line-height: 1.5;
        }

        .profile-image {
            width: 300px;
            height: 300px;
            margin: 20px auto;
            display: block;
        }

        .message-button {
            background-color: #FFFFFF;
            color: #E91E63;
            padding: 15px 30px;
            border: none;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            display: block;
            margin: 20px auto;
            transition: all 0.3s ease;
        }

            .message-button:hover {
                background-color: #E91E63;
                color: #FFFFFF;
            }

        footer {
            font-size: 0.8rem;
            color: #FFFFFF;
            padding: 20px 10px;
            background-color: rgba(0, 0, 0, 0.8);
            width: 100%;
            text-align: center;
            border-top: 2px solid #E91E63;
            box-shadow: 0px -5px 15px rgba(0, 0, 0, 0.5);
            margin-top: 20px;
        }

            footer a {
                color: #FFFFFF;
                text-decoration: none;
            }

                footer a:hover {
                    color: #FFE0B2;
                    text-decoration: underline;
                }
    </style>
    <script src="site.js"></script>
</head>
<body>

    <div class="container text-center">
        <h1 class="display-4">Examen de Programación Progreso 1</h1>
        <p>Realizado por Jordy Aguilar</p>
        <img src="https://i0.wp.com/julioastillero.com/wp-content/uploads/2023/10/Memes-del-Balon-de-Oro.jpg?fit=1280%2C720&ssl=1" alt="Imagen de perfil" class="profile-image">
        <button class="message-button" onclick="mostrarMensaje()">¿Quién soy?</button>
    </div>

    <footer>
        © 2024 - Jordy Aguilar - <a href="#">Privacy</a>
    </footer>

</body>
</html>
