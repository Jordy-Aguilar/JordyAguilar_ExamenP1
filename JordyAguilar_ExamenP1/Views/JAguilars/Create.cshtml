@model JordyAguilar_ExamenP1.Models.JAguilar

@{
    ViewData["Title"] = "Crear Cliente";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #000000, #E91E63);
            font-family: 'Montserrat', sans-serif;
            color: #FFFFFF;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            text-align: center;
            padding: 20px;
            max-width: 600px;
            width: 100%;
            border-radius: 20px;
        }

        h1 {
            font-size: 2rem;
            color: #FFFFFF;
            margin-bottom: 20px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            color: #FFFFFF;
            display: block;
            margin-bottom: 5px;
        }

        input, select {
            padding: 10px;
            width: 100%;
            border-radius: 10px;
            border: none;
            margin-bottom: 10px;
        }

        .btn {
            background-color: #FFFFFF;
            color: #E91E63;
            padding: 10px 20px;
            border-radius: 50px;
            font-weight: bold;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #E91E63;
            color: #FFFFFF;
        }

        footer {
            font-size: 0.8rem;
            color: #FFFFFF;
            padding: 20px 10px;
            background-color: rgba(0, 0, 0, 0.8);
            width: 100%;
            text-align: center;
            border-top: 2px solid #E91E63;
            box-shadow: 0px -5px 15px rgba(0, 0, 0, 0.5);
            margin-top: 20px;
        }

        footer a {
            color: #FFFFFF;
            text-decoration: none;
        }

        footer a:hover {
            color: #FFE0B2;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Agregar nuevo cliente</h1>
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Sueldo"></label>
                <input asp-for="Sueldo" class="form-control" />
                <span asp-validation-for="Sueldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteAntiguo"></label>
                <select asp-for="ClienteAntiguo" class="form-control">
                    <option value="true">Sí</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="ClienteAntiguo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido"></label>
                <input asp-for="Pedido" class="form-control" />
                <span asp-validation-for="Pedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCelular"></label>
                <select asp-for="IdCelular" class="form-control" asp-items="ViewBag.IdCelular"></select>
                <span asp-validation-for="IdCelular" class="text-danger"></span>
            </div>
            <button type="submit" class="btn">Crear Cliente</button>
        </form>
    </div>
    <footer>
        <p>Aplicación de gestión de clientes - Jordy Aguilar © 2024</p>
        <p><a href="https://example.com/privacy-policy">Política de privacidad</a> | <a href="https://example.com/terms-of-service">Términos de servicio</a></p>
    </footer>
</body>
</html>
