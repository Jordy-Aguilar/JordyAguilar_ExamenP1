@model IEnumerable<JordyAguilar_ExamenP1.Models.Celulares>

@{
    ViewData["Title"] = "Hola como estan";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #000000, #E91E63);
            font-family: 'Montserrat', sans-serif;
            color: #FFFFFF;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            text-align: center;
            padding: 20px;
            max-width: 800px;
            width: 100%;
            border-radius: 20px;
        }

        h1 {
            font-size: 2rem;
            color: #FFFFFF;
            margin-bottom: 20px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .create-link {
            background-color: #FFFFFF;
            color: #E91E63;
            padding: 10px 20px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: bold;
            margin-bottom: 20px;
            display: inline-block;
            transition: background-color 0.3s;
        }

            .create-link:hover {
                background-color: #E91E63;
                color: #FFFFFF;
            }

        .table-container {
            margin-top: 20px;
            overflow-x: auto;
            border-radius: 20px;
            width: 100%;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            background-color: #000000;
            border-radius: 20px;
            overflow: hidden;
            color: #FFFFFF;
        }

            .table th, .table td {
                padding: 15px;
                text-align: center;
            }

            .table th {
                background-color: #FFFFFF;
                color: #000000;
                text-transform: uppercase;
                font-size: 0.9rem;
            }

            .table tr:nth-child(even) {
                background-color: rgba(255, 255, 255, 0.1);
            }

            .table tr:hover {
                background-color: rgba(233, 30, 99, 0.3);
            }

        .actions a {
            color: #E91E63;
            text-decoration: none;
            font-weight: bold;
            margin: 0 5px;
        }

            .actions a:hover {
                color: #FFFFFF;
            }

        footer {
            font-size: 0.8rem;
            color: #FFFFFF;
            padding: 20px 10px;
            background-color: rgba(0, 0, 0, 0.8);
            width: 100%;
            text-align: center;
            border-top: 2px solid #E91E63;
            box-shadow: 0px -5px 15px rgba(0, 0, 0, 0.5);
            margin-top: 20px;
        }

            footer a {
                color: #FFFFFF;
                text-decoration: none;
            }

                footer a:hover {
                    color: #FFE0B2;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>En esta sección podrás visualizar los teléfonos celulares que agregues en el botón a continuación:</h1>
        <a class="create-link" asp-action="Create">Agregar Nuevo telefono</a>
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Modelo del teléfono celular</th>
                        <th>Año</th>
                        <th>Precio</th>
                        <th>Más</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Anio)</td>
                            <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                            <td class="actions">
                                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                            </td>
                        </tr>
                    }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <footer>
        © 2024 - JordyAguilar_ExamenP1 - <a href="#">Privacy</a>
    </footer>
</body>
</html>
